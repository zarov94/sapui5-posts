<mvc:View controllerName="sap.fiori.postsApp.controller.Posts" 
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc">
    <Table id="posts" class="sapUiResponsive" width="auto" items="{posts>/}">
        <headerToolbar>
            <Toolbar>
                <Title text="{postsPageTitle}"/>
                <ToolbarSpacer/>
                <SearchField width="50%" search="onFilterPosts"/>
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column hAlign="End" minScreenWidth="Small" demandPopin="true" width="4em">
                <Text text="{i18n>postIdTitle}"/>
            </Column>
            <Column>
                <Text text="{i18n>postTitle}"/>
            </Column>
        </columns>
    </Table>
</mvc:View>